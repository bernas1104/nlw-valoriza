{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "types": [
      "jest",
      "reflect-metadata"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "./jest.config.js",
    "./prettier.config.js",
    "./coverage/**/*.js"
  ],
  "include": [
    "./src/**/*"
  ],
  "files": [
    "./src/@types/express/index.d.ts"
  ]
}

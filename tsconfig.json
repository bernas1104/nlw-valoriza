{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "types": [
      "jest",
      "reflect-metadata"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./jest.config.js",
    "./prettier.config.js",
    "./coverage/**/*.js"
  ]
}
